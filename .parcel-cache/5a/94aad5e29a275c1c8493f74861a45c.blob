"use strict";

var _roughNotation = require("rough-notation");

require("alpinejs");

require("impress.js");

require("bulma/css/bulma.css");

require("animate.css");

//
const app = {
  data() {
    return {
      show: false,

      //
      init() {
        console.log("mounted");
        impress().init();
        document.body.addEventListener("impress:stepenter", () => console.log("impress:stepenter"));
      },

      open() {
        this.show = true;
        const e = document.querySelector(" mark");
        const annotation = (0, _roughNotation.annotate)(e, {
          type: "highlight",
          color: "#00990099"
        });
        annotation.show();
      },

      close() {
        this.show = false;
      },

      isOpen() {
        return this.show === true;
      }

    };
  }

};
window.app = app;