html {
  height: 100vh !important;
  overflow: hidden;
}
html,
body {
  margin: 0;
  padding: 0;
}

html,
body {
  font-family: "CorporativeMedium", sans-serif !important;
}
body {
  background-position-x: -100vw;
  background-position-y: -100vh;
  transition: background-position-x 2s ease-in-out,
    background-position-y 2s ease-in-out;
}
