mark {
  background-color: transparent;
  color: inherit;
}

.is-256x256 {
  width: 256px;
  height: 256px;
}

figcaption {
  background: linear-gradient(
    to bottom,
    rgba(0, 0, 0, 0) 0,
    rgba(0, 0, 0, 0.2) 100%
  );
  font-size: 0.7rem;
  position: relative;
  bottom: 2rem;
  left: 0rem;
  /* right: 10rem; */
  padding: 0.5rem;
  padding-left: 0.75rem;
  padding-right: 0.75rem;
}

/*
imprint...
*/
.left-overlay {
  width: 100vh;
  height: 100vh;
  position: absolute;
  top: 0px;
  left: calc((100vh - 50vw) * -1);
  opacity: 0;
  transition: all 1s ease-in-out;

  background-image: none;
  background-size: contain;
  background-position: center center;
}
.impress-on-man .left-overlay {
  opacity: 1;
  background-image: url("3fc6bbb31b5015c930a436ccfb920efc");
}
.impress-on-internet-of-blah .left-overlay {
  opacity: 1;
  background-image: url("d3fdec5dc3ed3665c31f805c854383d3");
}
