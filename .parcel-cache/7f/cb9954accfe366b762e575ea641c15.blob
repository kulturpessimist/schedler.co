"use strict";

var _roughNotation = require("rough-notation");

require("alpinejs");

require("impress.js");

require("bulma/css/bulma.css");

require("animate.css");

//
const alpineScope = {
  dropdown() {
    return {
      init() {
        console.log("mounted");
        impress().init();
      },

      show: false,

      open() {
        this.show = true;
        const e = document.querySelector(".v4.cover .text-intro.fadeInUp mark");
        const annotation = (0, _roughNotation.annotate)(e, {
          type: "highlight",
          color: "#00990099"
        });
        annotation.show();
      },

      close() {
        this.show = false;
      },

      isOpen() {
        return this.show === true;
      }

    };
  }

};
window.alpineScope = alpineScope;