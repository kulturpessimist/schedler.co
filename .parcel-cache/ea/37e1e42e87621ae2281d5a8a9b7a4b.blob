.box {
    transition: all 0.5s ease-in-out;
  }
  .box p {
    font-size: 0.8rem;
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }
  .box .media-left,
  .box .content {
    display: flex;
    align-self: center;
  }
  .ribbon.is-small {
    font-size: 0.5rem;
  }
  .expert {
    padding-top: 0.6rem;
    padding-bottom: 0.6rem;
  }
  .box:hover {
    box-shadow: 0 0.5em 1em -0.125em rgba(10, 10, 10, 0.5),
      0 0px 0 1px rgba(10, 10, 10, 0.04);
  }