html,
body {
  font-family: "CorporativeMedium", sans-serif !important;
}

/**/

.step {
  width: 100vw;
  height: 100vh;
}

section.step .columns.is-vcentered {
  height: 100vh;
}

/**/

mark {
  background-color: transparent;
  color: inherit;
}

.tile figcaption {
  background: linear-gradient(
    to bottom,
    rgba(0, 0, 0, 0) 0,
    rgba(0, 0, 0, 0.2) 100%
  );
  font-size: 1rem;
  position: relative;
  bottom: 2rem;
  left: 0rem;
  /* right: 10rem; */
  padding: 0.5rem;
  padding-left: 0.75rem;
  padding-right: 0.75rem;
}
