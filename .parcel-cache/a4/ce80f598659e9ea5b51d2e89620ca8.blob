html,
body {
  font-family: "CorporativeMedium", sans-serif !important;
}
body {
  background-position-x: -100vw;
  background-position-y: -100vh;
  transition: background-position-x 2s ease-in-out,
    background-position-y 2s ease-in-out;
}
/**/

.step {
  width: 100vw;
  height: 100vh;
}

section.step .columns.is-vcentered {
  height: 100vh;
}

/**/

mark {
  background-color: transparent;
  color: inherit;
}

.is-256x256 {
  width: 256px;
  height: 256px;
}

figcaption {
  background: linear-gradient(
    to bottom,
    rgba(0, 0, 0, 0) 0,
    rgba(0, 0, 0, 0.2) 100%
  );
  font-size: 0.7rem;
  position: relative;
  bottom: 2rem;
  left: 0rem;
  /* right: 10rem; */
  padding: 0.5rem;
  padding-left: 0.75rem;
  padding-right: 0.75rem;
}

/*
imprint...
